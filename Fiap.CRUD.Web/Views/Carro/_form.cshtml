
@model Carro

<!-- Usando as propriedades da model Carro -->
<div class="form-group">
    <label asp-for="Modelo">Modelo</label>
    <input asp-for="Modelo" class="form-control" />
</div>

<div class="form-group">
    <label asp-for="Marca">Marca</label>
    <select asp-for="Marca" asp-items="@ViewBag.marcas" class="form-control">
        <option>Selecione</option>
    </select>
</div>

<div class="form-group">
    <label asp-for="Ano">Ano</label>
    <input asp-for="Ano" class="form-control" value="Ano" id="ano" readonly/>
</div>

<div class="form-group">
    <label asp-for="DataFabricacao">DataFabricacao</label>
    <input asp-for="DataFabricacao" class="form-control" onblur="GeraAno()" id="DataFabricacao"/>
</div>

<div class="form-group">
    <label asp-for="Combustivel"></label>
    <select asp-for="Combustivel" asp-items="@Html.GetEnumSelectList<Combustivel>()" class="form-control">
        <option>Selecione</option>
    </select>
</div>

<div class="form-group">
    <label asp-for="Valor">Valor</label>
        <input asp-for="Valor" class="form-control"/>
</div>

<div class="form-group">
    <label asp-for="Novo">Novo</label>
    <input asp-for="Novo"/>
</div>



<script>
    //Funcao onblur para gerar o valor do input ano
    function GeraAno() {
        let Data = document.getElementById("DataFabricacao").value;

        document.getElementById("ano").value = Data.toString().substring(4, 0);

        console.log(Data.toString().substring(4, 0))
    }
</script>